<%- include("templates/header") %>

    <h2 style="color: #16bac5; text-shadow: 2px 2px 0px #5863f8;">Forgot Password</h2>

    Please enter your email address and we will help you reset your password.

    <br><br>
    <form action='/checkEmail' method='post'>
        <div class="mb-3">
            <label for="email" class="form-label" style="color: #16bac5; text-shadow: 2px 2px 0px #5863f8;">Email</label>
            <input name='email' type="email" class="form-control" id="email" placeholder='email@example.com' autofocus></input>
        </div>
        <% if (errorMessage) { %>
            <div class="error-container" style="display: flex; justify-content: center;">
                <div class="alert alert-danger shake" style="max-width: 300px;">
                    <p>
                        <%= errorMessage %>
                    </p>
                </div>
            </div>
            <% } %>
        <button class="btn btn-outline-primary">Submit</button>
    </form>

    <%- include("templates/footer") %>