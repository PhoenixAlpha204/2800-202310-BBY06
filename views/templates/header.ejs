  <style>
    ul {
      list-style: none;
    }

    .mobile{
      display: none;
    }

    nav {
      background-color: #171D1C;
    }

    

    body {
      margin: 0;
      padding: 0;
      height: 100%;
      color: #efe9f4;
      background-color: #171D1C;
    }

    .hover-effect p:hover {
      background-color: #555;
      cursor: pointer;
    }

    nav {
      color: #efe9f4;
    }

    footer {
      height: 50px;
    }

    .navbar2 {
      display: none;
    }

    .image-container img {
      max-width: 50%;
      height: auto;
    }

    .outlined-text {
      text-shadow: -1px -1px 1px #000, 1px -1px 1px #000, -1px 1px 1px #000, 1px 1px 1px #000;
    }

    .carousel {
    width: 80%;
    height: 200px;
    }

    .carousel-item img {
      width: 100%;
      height: 300px;
    }

    .crop-img-container {
    max-height: 300px;
    overflow: hidden;
    }

    .crop-img {
      object-fit: cover;
      width: 100%;
      height: 100%;
    }

    @media only screen and (min-width: 768px) {
      .footer {
        height: 50px;
        position: sticky;
        bottom: 0;
      }
    }

    @media only screen and (max-width: 768px) {
      #spacer {
        height: 100px;
      }

      ul {
        list-style: none;
      }

      nav {
        background-color: #171D1C;
      }

      .hide{
        display: none;
      }

      body {
        margin: 0;
        padding: 0;
        height: 100%;
        color: #efe9f4;
        background-color: #171D1C;
      }

      .hover-effect p:hover {
        transform: translateY(-5px);
      }

      .mobileView{
      height: 25vh;
    }

      nav {
        color: #efe9f4;
        display: flex;
        justify-content: center;
        flex-wrap: nowrap;
      }

      footer {
        background-color: #5863f8;
        width: 100%;
        height: 80px;
        position: sticky;
        bottom: 0;
        left: 0;
      }

      .navbar2 {
        background-color: #5863f8;
      }

      .center {
        text-align: center;
      }

      .image-container img {
        max-width: 100%;
        height: auto;
      }

      .carousel {
        justify-content: center;
        width: 80%;
        height: 200px;
      }

      .carousel-item img {
        width: 100%;
        height: auto;
      }

      .row2 {
        display: flex;
        flex-direction: column;
      }
    }
    
  </style>
  
