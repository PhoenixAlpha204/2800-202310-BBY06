          href="/">
        <a class="navbar-brand" href="/" style="color: #16bac5; text-shadow: 2px 2px 0px #5863f8;">Songgestions</a>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active" href="/search" style="color: #16bac5; text-shadow: 2px 2px 0px #5863f8;">Browse</a>
            <a class="nav-link active" href="/favourites" style="color: #16bac5; text-shadow: 2px 2px 0px #5863f8;">Favourites</a>
            <a class="nav-link active" href="/playlists" style="color: #16bac5; text-shadow: 2px 2px 0px #5863f8;">Playlists</a>
          </div>
        </div>
        <a href="/profile">
          <img src="404image" onerror="this.src='./img/placeholder-pfp.jpg';" width="48" height="48">
