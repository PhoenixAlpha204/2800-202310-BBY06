<script>
    // Block Jump Game Variables
    var character = document.getElementById("character");
    var block = document.getElementById("block");
    var counter = 0;
    var highScore = 0;
    var isGameOver = false; // Add a variable to track game over state
    var button1 = document.getElementById("button1");
    var button2 = document.getElementById("button2");
    var button3 = document.getElementById("button3");
    var button4 = document.getElementById("button4");
    var button5 = document.getElementById("button5");
    var button6 = document.getElementById("button6");

    var gameElement = document.getElementById("game");

    // Block Jump Game Functions
    function jump() {
        if (character.classList == "animate" || isGameOver) {
            return;
        }
        character.classList.add("animate");
        jumpSound.play();
        setTimeout(function () {
            character.classList.remove("animate");
        }, 300);
    }

    var checkDead = setInterval(function () {
        let characterTop = parseInt(window.getComputedStyle(character).getPropertyValue("top"));
        let blockLeft = parseInt(window.getComputedStyle(block).getPropertyValue("left"));
        var score = Math.floor(counter / 100);

        if (blockLeft < 20 && blockLeft > -20 && characterTop >= 130) {
            block.style.animation = "none";
            if (score >= 10) {
                if (score > highScore) {
                    highScore = score;
                }
                document.getElementById("highScore").textContent = "High Score: " + highScore;
                document.getElementById("404").textContent = "You Win!";
                gameElement.innerHTML = "";
                gameElement.style.backgroundImage = "url('./img/rickroll.gif')";
                gameElement.style.backgroundPosition = "center -50px";



                rickRoll.play();
                isGameOver = true; // Set the game over state
                document.getElementById("chat").style.display = "block"; // Show the chat div



            } else {
                if (score > highScore) {
                    highScore = score;
                }
                document.getElementById("highScore").textContent = "High Score: " + highScore;
                counter = 0;
                block.style.animation = "block 1s infinite linear";
            }
        } else {
            if (!isGameOver) {
                counter++;
                document.getElementById("scoreSpan").innerHTML = Math.floor(counter / 100);
            }
        }
    }, 10);

    button1.addEventListener("click", areYouSerious);
    function areYouSerious() {
        document.getElementById("404").textContent = "Yes, I am serious (. ❛ ᴗ ❛.)";
    }

    button2.addEventListener("click", whoSingsThat);
    function whoSingsThat() {
        document.getElementById("404").textContent = "Sir Rick Astley";
    }

    button3.addEventListener("click", stopRickRoll);
    function stopRickRoll() {
        document.getElementById("404").textContent = "Your wish is my command~";
        rickRoll.pause();
    }

    button4.addEventListener("click", ok);
    function ok() {
        document.getElementById("404").textContent = "Not impressed (⊙_⊙)？";
    }

    button5.addEventListener("click", like);
    function like() {
        document.getElementById("404").textContent = "Thanks! From Connie, Tarasios, Quincy & Vincent ( ͡° ͜ʖ ͡°)";
    }

    button6.addEventListener("click", playAgain);
    function playAgain() {
        location.reload();

    }






</script>

